<%include ./partials/header %>

    <div class="container">
        <header class="jumbotron">
            <h1>Students Partner</h1>
            <p>Your Place,Your Purpose</p>
            <p>
                <% if(designation == "teacher"){ %>
                    <a class="btn btn-primary btn-lg" href="/courses/new">Create A new Course</a>
                <% } %>
            </p>
        </header>
        
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            
            <% courses.forEach(function(course){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img width="400" height="200" src="<%= course.image %>">
                    <div class="caption">
                        <h4><%= course.name %> by <%= course.instructor.username %></h4>
                    </div>
                    <p>
                        <a href="/courses/<%= course._id %>" class="btn btn-primary">Know More</a>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
